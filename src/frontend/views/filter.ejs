<!DOCTYPE html>
<html>
    <head>
        <%- include('partials/head') %>
    </head>
    <body>
        <div class="container">
            <%- include('partials/navbar') %>
            <h1>Please select the filters you would like to use</h1>
            <label for="skillLevel">Skill level:</label>
            <select id="skillLevel">
                <option>Beginner</option>
                <option>Intermediate</option>
                <option>Expert</option>
            </select>
            <br />
            <label for="ageMinimum">Minimum age:</label>
            <input type="number" id="ageMinimum" />
            <button onclick="next()">Next</button>
            <%- include('partials/footer') %>
        </div>
        <script>
            function next() {
                const skillLevel = document.getElementById('skillLevel').value;
                let ageMinimum = document.getElementById('ageMinimum').value;
                if (!ageMinimum) {
                    ageMinimum = -1;
                }
                window.location = `/posting?date=<%= passedDate %>&time=<%= passedTime %>&course=<%= passedCourse %>&skillLevel=${skillLevel}&ageMinimum=${ageMinimum}`;
            }
        </script>
    </body>
</html>
